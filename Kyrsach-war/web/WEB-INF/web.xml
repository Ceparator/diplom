<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/403.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>javax.faces.FacesException</exception-type>
        <location>/403.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>javax.faces.el.EvaluationException</exception-type>
        <location>/403.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>javax.persistence.EntityNotFoundException</exception-type>
        <location>/403.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/403.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>admin</display-name>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <description/>
            <url-pattern>/allUsers.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>conductor</display-name>
        <web-resource-collection>
            <web-resource-name>conductor</web-resource-name>
            <description/>
            <url-pattern>/addReport.xhtml</url-pattern>
            <url-pattern>/editReport.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>conductor</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>guest</display-name>
        <web-resource-collection>
            <web-resource-name>guest</web-resource-name>
            <description/>
            <url-pattern>/routeCircuit.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>guest</role-name>
            <role-name>admin</role-name>
            <role-name>conductor</role-name>
            <role-name>driver</role-name>
            <role-name>doctor</role-name>
            <role-name>dispatcher</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Ограничение1</display-name>
        <web-resource-collection>
            <web-resource-name>noadd</web-resource-name>
            <description/>
            <url-pattern>/addStop.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>noAddRoute</web-resource-name>
            <description/>
            <url-pattern>/addRoute.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>noEditStop</web-resource-name>
            <description/>
            <url-pattern>/editStop.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>noUserList</web-resource-name>
            <description/>
            <url-pattern>/allUsers.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Ограничение2</display-name>
        <web-resource-collection>
            <web-resource-name>noReport</web-resource-name>
            <description/>
            <url-pattern>/addReport.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>noEditReport</web-resource-name>
            <description/>
            <url-pattern>/editReport.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>conductor</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>doctor</display-name>
        <web-resource-collection>
            <web-resource-name>doctor</web-resource-name>
            <description/>
            <url-pattern>/validDriver.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            <role-name>doctor</role-name>
            <role-name>dispatcher</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>dispatcher</display-name>
        <web-resource-collection>
            <web-resource-name>dispatcher</web-resource-name>
            <description/>
            <url-pattern>/routeSheet.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>dispatcher</role-name>
            <role-name>driver</role-name>
            <role-name>conductor</role-name>
            <role-name>admin</role-name>
            <role-name>guest</role-name>
            <role-name>doctor</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>conductor</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>guest</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>driver</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>doctor</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>dispatcher</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>mechanic</role-name>
    </security-role>
</web-app>
